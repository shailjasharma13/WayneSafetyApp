<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f4c05"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="checkcamera.csc5991.wsu.checkcamera.ReportIncident">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/cameraPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/takePicture"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:background="@drawable/roundbutton"
            android:text="Take Picture"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingBottom="13dp"/>

        <Button
            android:id="@+id/openGallery"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:background="@drawable/roundbutton"
            android:text="Open Gallery"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingBottom="13dp"/>





    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/messgaeText"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:hint="Write Messsage" />

        <Button
            android:id="@+id/sendMessgae"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:background="@drawable/roundbutton"
            android:text="Send Messgae"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
